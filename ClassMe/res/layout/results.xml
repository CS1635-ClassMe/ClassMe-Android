<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/background_blue"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Active Course"
        />
    <include layout="@layout/hr" />
    <ListView android:id="@+id/results_list_active_course"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="30dp">
        </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Archived Course"/>
    <include layout="@layout/hr" />
    <ListView android:id="@+id/results_list_archived_course"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="30dp">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posts"/>
    <include layout="@layout/hr" />
    <ListView android:id="@+id/results_list_posts"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="30dp">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructors"/>
    <include layout="@layout/hr" />
    <ListView android:id="@+id/results_list_instructors"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="30dp">
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Members"/>
    <include layout="@layout/hr" />
    <ListView android:id="@+id/results_list_members"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingRight="30dp">
    </ListView>



</LinearLayout>